unit Click_NBIoT_timer;

uses Click_NBIoT_types;

procedure nbiot_configTimer(); 

implementation

procedure nbiot_configTimer(); 
begin

    SREG_I_bit := 1; 
    TCCR1A := 0x80; 
    TCCR1B := 0x09; 
    OCR1AH := 0x1F; 
    OCR1AL := 0x3F; 
    OCIE1A_bit := 1; 

end;

procedure Timer_interrupt(); org IVT_ADDR_TIMER1_COMPA;
begin

    nbiot_tick(); 

end;

end.